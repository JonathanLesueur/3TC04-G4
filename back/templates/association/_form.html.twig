{{ form_start(form) }}
<div class="form-line">
    <div class="group-block">
        <label for="association_name">Nom de l'association</label>
        <div class="input-box">
            <div class="input-logo"><svg class="plume"><use xlink:href="#plume"></use></svg></div>
            {{ form_widget(form.name) }}
        </div>
        <div class="error-box">{{ form_errors(form.name) }}</div>
    </div>
</div>
<div class="form-line">
    <div class="group-block">
        <label for="association_description">Description</label>
        <div class="input-box">
            {{ form_widget(form.description) }}
            <div class="input-logo"><svg class="plume"><use xlink:href="#plume"></use></svg></div>
        </div>
        <div class="error-box">{{ form_errors(form.description) }}</div>
    </div>
</div>
<div class="form-line">
    <div class="group-block">
        <label for="association_logo">Logo</label>
        <div class="input-box">
            <div class="input-logo"><svg class="image"><use xlink:href="#image"></use></svg></div>
            {{ form_widget(form.logo) }}
        </div>
        <div class="error-box">{{ form_errors(form.logo) }}</div>
    </div>
</div>
<div class="form-line">
    <div class="group-block">
        <label for="association_coverpicture">Image de couverture</label>
        <div class="input-box">
            <div class="input-logo"><svg class="image"><use xlink:href="#image"></use></svg></div>
            {{ form_widget(form.coverpicture) }}
        </div>
        <div class="error-box">{{ form_errors(form.coverpicture) }}</div>
    </div>
</div>
<div class="form-line">
    <div class="button-block">
        <button onclick="submit()" class="submit" type="submit">Cr√©er l'association</button>
    </div>
</div>
{{ form_end(form) }}