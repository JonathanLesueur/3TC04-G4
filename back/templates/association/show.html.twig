{% extends 'aside-right.html.twig' %}
{% block title %}Actualité de l'association {{ association.name }} {{global_name}}{% endblock %}

{% block headerblock %}
    {% include "association/association_headerBox.html.twig" %}
{% endblock %}


{% block content %} 
<div class="col-xs-12">
    <div class="xs-py-15 xs-px-15">
        <h1 class="bloc-title">Publications de l'association</h1>
        {% include "association/profil_blogPosts_list.html.twig" %}
        {{ knp_pagination_render(blogPosts) }}
    </div>
</div>
{% endblock %}


{% block aside %}
    {% if userIsAdmin %}
        <div class=" xs-py-10 xs-px-10">
            <a href="{{ path('association_manage', {'id': association.id}) }}" class="button orange">
                <svg class="plume"><use xlink:href="#plume"></use></svg>
                <span>Gérer l'asso</span>
            </a>
        </div>
    {% endif %}
{% endblock %}

