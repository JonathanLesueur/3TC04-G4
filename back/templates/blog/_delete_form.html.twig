<form method="post" action="{{ path('blog_post_delete', {'id': post.id}) }}" onsubmit="return confirm('Confirmez-vous la suppression de cet article ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
    <button class="button orange small"><span>Supprimer</span></button>
</form>
