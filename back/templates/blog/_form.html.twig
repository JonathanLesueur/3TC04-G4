{{ form_start(form) }}
<div class="form-line">
    <div class="group-block">
        <label for="blog_post_title">Titre</label>
        <div class="input-box">
            <div class="input-logo"><svg class="plume"><use xlink:href="#plume"></use></svg></div>
            {{ form_widget(form.title) }}
        </div>
    </div>
</div>
<div class="form-line">
    <div class="group-block">
        <label for="blog_post_picture">Image mise en avant</label>
        <div class="input-box">
            <div class="input-logo"><svg class="plume"><use xlink:href="#plume"></use></svg></div>
            {{ form_widget(form.picture) }}
        </div>
    </div>
</div>
<div class="form-line">
    <div class="group-block">
        <label for="blog_post_content">Contenu</label>
        <div class="input-box xs-mb-5">
            {{ form_widget(form.content) }}
            <div class="input-logo"><svg class="plume"><use xlink:href="#plume"></use></svg></div>
        </div>
    </div>
</div>
<div class="form-line">
    <div class="group-block">
        <label for="blog_post_source">Source</label>
        <div class="input-box xs-mb-5">
            <div class="input-logo"><svg class="plume"><use xlink:href="#plume"></use></svg></div>
            {{ form_widget(form.source) }}
        </div>
        <label for="blog_post_source"><em>A mentionner si votre article se base sur une publication en ligne.</em></label>
    </div>
</div>
<div class="form-line">
    <div class="button-block">
        <button class="submit" type="submit">Cr√©er l'article'</button>
    </div>
</div>
{{ form_end(form) }}
