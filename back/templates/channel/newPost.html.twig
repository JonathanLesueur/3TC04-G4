{% extends 'aside-right.html.twig' %}
{% block title %}Nouvelle discussion dans : {{ channel.name }} {{global_name}}{% endblock %}

{% block headerblock %}{% endblock %}


{% block content %} 
<div class="col-xs-12">
    <div class="xs-py-15 xs-px-15">
        <h1 class="bloc-title">Nouvelle discussion dans : {{ channel.name }}</h1>
        {% include "channel/_formNewPost.html.twig" %}
    </div>
</div>
{% endblock %}


{% block aside %}
    <div class=" xs-py-10 xs-px-10">
        <a href="{{ path('channel_show', {'id': channel.id}) }}" class="button orange">
            <svg class="back"><use xlink:href="#back"></use></svg>
            <span>Retour</span>
        </a>
    </div>
{% endblock %}

