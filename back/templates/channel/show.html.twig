{% extends 'aside-right.html.twig' %}
{% block title %}Salon Thématique : {{ channel.name }} {{global_name}}{% endblock %}

{% block headerblock %}{% endblock %}


{% block content %} 
<div class="col-xs-12">
    <div class="xs-py-15 xs-px-15">
        <h1 class="bloc-title">{{ channel.name }} : messages récents</h1>
        {% set posts = channel.rapidPosts|reverse %}
        {% include "post/post_list.html.twig" %}
    </div>
</div>
{% endblock %}


{% block aside %}
    <div class=" xs-py-10 xs-px-10">
        <a href="{{ url('channel_new_post', {'id': channel.id}) }}" class="button orange">
            <svg class="plume"><use xlink:href="#plume"></use></svg>
            <span>Nouveau message</span>
        </a>
    </div>
{% endblock %}

