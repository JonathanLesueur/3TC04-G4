<form method="post" action="{{ path('market_delete_offer', {'id': offer.id}) }}" onsubmit="return confirm('Confirmez-vous la suppression de cette offre ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offer.id) }}">
    <button class="button orange small"><span>Supprimer</span></button>
</form>
