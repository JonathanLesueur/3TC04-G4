{% extends 'aside-right.html.twig' %}
{% block title %}{{ offer.title|striptags }} {{global_name}}{% endblock %}

{% block headerblock %}
    {% include "user/user_headerBox.html.twig" %}
{% endblock %}


{% block content %} 
<div class="col-xs-12">
    <div class="xs-py-15 xs-px-15">
        {% include "market/offer_full.html.twig" %}
        {% if offer.offerComments|length > 0 %}
            <h2 class="bloc-title">Commentaires</h2>
            {% include "market/offer_responses_list.html.twig" %}
        {% endif %}
        <h2 class="bloc-title xs-mt-20">Réagir à cette annonce</h2>
        {% include "market/_form_reponse.html.twig" %}
    </div>
</div>
{% endblock %}


{% block aside %}
<div class=" xs-py-10 xs-px-10">
    <a href="{{ url('market_index') }}" class="button orange">
        <svg class="back"><use xlink:href="#back"></use></svg>
        <span>Retour</span>
    </a>
</div>
<div class=" xs-py-10 xs-px-10">
    <a href="mailto:{{ offer.author.email }}" class="button orange">
        <svg class="enveloppe"><use xlink:href="#enveloppe"></use></svg>
        <span>Contacter {{ offer.author.firstname }}</span>
    </a>
</div>
<div class=" xs-py-10 xs-px-10">
    <a href="{{ path('blog_posts_user', {'id': offer.author.id }) }}" class="button orange">
        <svg class="loupe"><use xlink:href="#loupe"></use></svg>
        <span>Blog de {{ offer.author.firstname }}</span>
    </a>
</div>
{% endblock %}

