{% extends 'aside-right.html.twig' %}
{% block title %}Place du marché {{global_name}}{% endblock %}

{% block content %} 
<div class="col-xs-12">
    <div class="xs-py-15 xs-px-15">
        <h1 class="main-title">Place du marché</h1>
        <h2 class="bloc-title">Recherche</h2>
        {% include "market/_search_form.html.twig" %}
        {% if offers|length > 0 %}
            <h2 class="bloc-title">Offres récentes</h2>
            {% include "market/offers_list.html.twig" %}
            {% if hasPage == true %}
                {{ knp_pagination_render(offers) }}
            {% endif %}
        {% endif %}
    </div>
</div>
{% endblock %}


{% block aside %}
    <div class=" xs-py-10 xs-px-10">
        <a href="{{ url('market_new_offer') }}" class="button orange">
            <svg class="plume"><use xlink:href="#plume"></use></svg>
            <span>Nouvelle offre</span>
        </a>
    </div>
    <div class=" xs-py-10 xs-px-10">
        <a href="{{ url('market_user_management') }}" class="button orange">
            <svg class="loupe"><use xlink:href="#loupe"></use></svg>
            <span>Mes offres</span>
        </a>
    </div>
{% endblock %}

