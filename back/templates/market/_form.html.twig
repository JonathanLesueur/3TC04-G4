{{ form_start(form) }}
<div class="form-line">
    <div class="group-block">
        <label for="offer_title">Titre de l'offre</label>
        <div class="input-box">
            <div class="input-logo"><svg class="plume"><use xlink:href="#plume"></use></svg></div>
            {{ form_widget(form.title) }}
        </div>
        <div class="error-box">{{ form_errors(form.title) }}</div>
    </div>
</div>
<div class="form-line">
    <div class="group-block">
        <label for="offer_type">Type d'offre</label>
        <div class="input-box">
            <div class="input-logo"><svg class="list"><use xlink:href="#list"></use></svg></div>
            {{ form_widget(form.type) }}
        </div>
        <div class="error-box">{{ form_errors(form.type) }}</div>
    </div>
    <div class="group-block">
        <label for="offer_price">Prix</label>
        <div class="input-box">
            <div class="input-logo"><svg class="euro"><use xlink:href="#euro"></use></svg></div>
            {{ form_widget(form.price) }}
        </div>
        <div class="error-box">{{ form_errors(form.price) }}</div>
    </div>
</div>
<div class="form-line">
    <div class="group-block">
        <label for="offer_picture">Image d'illustration</label>
        <div class="input-box">
            <div class="input-logo"><svg class="image"><use xlink:href="#image"></use></svg></div>
            {{ form_widget(form.picture) }}
        </div>
        <div class="error-box">{{ form_errors(form.picture) }}</div>
    </div>
</div>
<div class="form-line">
    <div class="group-block">
        <label for="offer_content">Description de l'offre</label>
        <div class="input-box">
            {{ form_widget(form.content) }}
            <div class="input-logo"><svg class="plume"><use xlink:href="#plume"></use></svg></div>
        </div>
        <div class="error-box">{{ form_errors(form.content) }}</div>
    </div>
</div>
<div class="form-line">
    <div class="button-block">
        <button onclick="submit()" class="submit" type="submit">Valider l'offre</button>
    </div>
</div>
{{ form_end(form) }}
