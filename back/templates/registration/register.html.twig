{% extends 'base.html.twig' %}

{% block title %}Inscription {{global_name}}{% endblock %}
{% block header %}{% include 'header_guest.html.twig' %}{% endblock %}

{% block body %}
<div class="register-login-container">
    <h1 class="thin-dark-title-big">Inscription</h1>
    <div class="login-box">
        {{ form_start(registrationForm) }}
        <div class="form-line">
            <div class="group-block">
                <label for="registration_form_firstname">Prénom</label>
                <div class="input-box">
                    <div class="input-logo"><svg class="user"><use xlink:href="#user"></use></svg></div>
                    {{ form_widget(registrationForm.firstname) }}
                </div>
                <div class="error-box">{{ form_errors(registrationForm.firstname) }}</div>
            </div>
            <div class="group-block">
                <label for="registration_form_lastname">Nom</label>
                <div class="input-box">
                    <div class="input-logo"><svg class="user"><use xlink:href="#user"></use></svg></div>
                    {{ form_widget(registrationForm.lastname) }}
                </div>
                <div class="error-box">{{ form_errors(registrationForm.colastnamentent) }}</div>
            </div>
        </div>
        <div class="form-line">
            <div class="group-block">
                <label for="registration_form_plainPassword">Mot de passe</label>
                <div class="input-box">
                    <div class="input-logo"><svg class="padlock"><use xlink:href="#padlock"></use></svg></div>
                    {{ form_widget(registrationForm.plainPassword) }}
                </div>
                <div class="error-box">{{ form_errors(registrationForm.plainPassword) }}</div>
            </div>
        </div>
        <div class="form-line">
            <div class="group-block">
                <label for="registration_form_email">Email</label>
                <div class="input-box">
                    <div class="input-logo"><svg class="email"><use xlink:href="#email"></use></svg></div>
                    {{ form_widget(registrationForm.email) }}
                </div>
                <div class="error-box">{{ form_errors(registrationForm.email) }}</div>
            </div>
        </div>
        <div class="form-line">
            <div class="group-block">
                <label for="registration_form_university">Faculté</label>
                <div class="input-box">
                    <div class="input-logo"><svg class="mortar"><use xlink:href="#mortar"></use></svg></div>
                    {{ form_widget(registrationForm.university) }}
                </div>
                <div class="error-box">{{ form_errors(registrationForm.university) }}</div>
            </div>
        </div>
        <div class="form-line">
            <div class="group-block">
                <label for="registration_form_formation">Formation</label>
                <div class="input-box">
                    <div class="input-logo"><svg class="certificat"><use xlink:href="#certificat"></use></svg></div>
                    {{ form_widget(registrationForm.formation) }}
                </div>
                <div class="error-box">{{ form_errors(foregistrationFormrm.formation) }}</div>
            </div>
        </div>
        <div class="form-line">
            <div class="group-block">
                <div class="input-box">
                    <label>{{ form_widget(registrationForm.agreeTerms)}} Je confirme ma volonté d'inscription</label>
                </div>
            </div>
        </div>

        <div class="form-line">
            <div class="button-block">
                <button class="submit" type="submit">S'inscrire</button>
            </div>
        </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
