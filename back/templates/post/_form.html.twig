{{ form_start(form) }}
<div class="form-line">
    <div class="group-block">
        <label for="rapid_post_title">Titre</label>
        <div class="input-box">
            <div class="input-logo"><svg class="plume"><use xlink:href="#plume"></use></svg></div>
            {{ form_widget(form.title) }}
        </div>
        <div class="error-box">{{ form_errors(form.title) }}</div>
    </div>
</div>
<div class="form-line">
    <div class="group-block">
        <label for="rapid_post_content">Contenu</label>
        <div class="input-box">
            {{ form_widget(form.content) }}
            <div class="input-logo"><svg class="plume"><use xlink:href="#plume"></use></svg></div>
        </div>
        <div class="error-box">{{ form_errors(form.content) }}</div>
    </div>
</div>
<div class="form-line">
    <div class="group-block">
        <label for="rapid_post_channels">Thématiques</label>
        <div class="input-box xs-mb-5">
            <div class="input-logo"><svg class="plume"><use xlink:href="#plume"></use></svg></div>
            {{ form_widget(form.channels) }}
        </div>
        <label for="rapid_post_channels"><em><small>(séparez les thématiques par des virgules s'il doit y en avoir plusieurs)</small></em></label>
        <div class="error-box">{{ form_errors(form.channels) }}</div>
    </div>
</div>
<div class="form-line">
    <div class="button-block">
        <button class="submit" type="submit">Publier le message</button>
    </div>
</div>
{{ form_end(form) }}
